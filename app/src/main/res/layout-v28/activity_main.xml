<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E5E5E5">

    <TextView
        android:id="@+id/textView"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/exljbris_museo_cyrl_500_italic"
        android:text="Calculator"
        android:textColor="#373A37"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="366dp"
        android:layout_height="100dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/constant"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="25dp"
        android:width="320dp"
        android:height="52dp"
        android:alpha="0.08"
        android:fontFamily="@font/digital_7"
        android:gravity="center_vertical"
        android:lineHeight="52dp"
        android:text="@string/some_id"
        android:textSize="47dp"
        android:textAppearance="@style/forPad"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/pad"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="25dp"
        android:width="320dp"
        android:height="52dp"
        android:fontFamily="@font/digital_7"
        android:alpha="1"
        android:gravity="center_vertical"
        android:textSize="47dp"
        android:textAppearance="@style/forPad"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:layout_constraintVertical_bias="1.0"
        android:lineHeight="52dp" />

